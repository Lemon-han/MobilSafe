<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mobilesafe="http://schemas.android.com/apk/res/com.emma.mobilesafe"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_process_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.emma.mobilesafe.acitivity.ProcessSettingActivity"
    tools:showIn="@layout/activity_process_setting">

    <com.emma.mobilesafe.view.SettingItemView
        android:id="@+id/cb_show_system"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:desoff="隐藏系统进程关闭"
        mobilesafe:deson="隐藏系统进程开启"
        mobilesafe:destitle="隐藏系统进程设置"/>
        android:textSize="@dimen/text_normal_size"/>

    <com.emma.mobilesafe.view.SettingItemView
        android:id="@+id/cb_lock_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:desoff="锁屏清理已关闭"
        mobilesafe:deson="锁屏清理已开启"
        mobilesafe:destitle="锁屏清理设置"/>
        android:textSize="@dimen/text_normal_size"/>
</LinearLayout>
