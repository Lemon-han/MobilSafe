<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/local_popup_bg"
              android:orientation="horizontal"
              android:padding="5dp">

    <TextView
        android:id="@+id/tv_uninstall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:drawableTop="@drawable/ic_delete_sweep_white_24dp"
        android:text="卸载"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/tv_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:drawableTop="@drawable/ic_folder_open_white_24dp"
        android:text="启动"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/tv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:drawableTop="@drawable/ic_share_white_24dp"
        android:text="分享"
        android:textColor="@android:color/white"/>

</LinearLayout>
