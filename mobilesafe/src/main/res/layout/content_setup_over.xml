<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_temp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.emma.mobilesafe.acitivity.SetupOverActivity"
    tools:showIn="@layout/activity_setup_over">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安全号码"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_normal_size"/>

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0000"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_normal_size"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_phone"
            android:layout_marginTop="5dp"
            android:background="@color/colorText"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="防盗锁包含是否开启"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_normal_size"/>

        <ImageView
            android:id="@+id/tv_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_lock_outline_pink_300_24dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_lock"
            android:layout_marginTop="5dp"
            android:background="@color/colorText"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_reset_setup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/selector_reset_setup_bg"
        android:text="重新进入向导"
        android:textSize="@dimen/text_normal_size"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@android:color/darker_gray"
        android:padding="5dp"
        android:text="功能介绍"
        android:textSize="@dimen/text_normal_size"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:drawableLeft="@drawable/ic_stars_pink_400_24dp"
        android:gravity="center_vertical"
        android:text="GPS追踪:#*location*#"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text_normal_size"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:drawableLeft="@drawable/ic_stars_pink_400_24dp"
        android:gravity="center_vertical"
        android:text="播放报警音乐:#*alarm*#"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text_normal_size"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:drawableLeft="@drawable/ic_stars_pink_400_24dp"
        android:gravity="center_vertical"
        android:text="数据销毁:#*wipedata*#"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text_normal_size"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:drawableLeft="@drawable/ic_stars_pink_400_24dp"
        android:gravity="center_vertical"
        android:text="远程锁屏:#*lockscreen*#"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text_normal_size"/>
</LinearLayout>
